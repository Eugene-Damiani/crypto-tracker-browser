{{#each cyptos as |crypto|}}
  {{log crypto}}
  <section data-id="{{crypto.id}}">
    <h6>ID:
      {{#if recipe._id}}
        {{recipe._id}}
      {{else}}
      No ID provided.
      {{/if}}
    <h6>Asset:</h6>
    <h3>
      {{limit crypto.asset 15}}
    </h3>
    <h6>Amount:</h6>
    <p>
      {{#if crypto.amount}}
        {{crypto.amount}}
      {{else}}
        0
      {{/if}}
    </p>
    <h6>Exchange:</h6>
    <p>
      {{#if crypto.exchange}}
        {{crypto.exchange}}
        {{else}}
        No Exchange listed
        {{/if}}
        <button type="submit" class="btn btn-outline-danger deleteCryptoAsset" data-id="{{crypto._id}}">Delete</button>
    </p>
    {{> partial}}
  </section>

{{/each}}
